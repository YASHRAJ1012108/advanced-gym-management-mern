# ==============================================
# ADVANCED GYM MANAGEMENT SYSTEM - BACKEND ENV
# ==============================================

# SERVER CONFIGURATION
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# DATABASE CONFIGURATION
MONGODB_URI=mongodb://localhost:27017/gym-management
# For MongoDB Atlas (uncomment and replace with your connection string):
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/gym-management?retryWrites=true&w=majority

# JWT CONFIGURATION
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRE=30d
JWT_REFRESH_EXPIRE=7d

# EMAIL CONFIGURATION (for notifications)
EMAIL_FROM=noreply@gymmanagement.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# STRIPE PAYMENT CONFIGURATION
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# CLOUDINARY CONFIGURATION (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# SECURITY CONFIGURATION
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# FILE UPLOAD CONFIGURATION
MAX_FILE_SIZE=50mb
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,application/pdf

# SESSION CONFIGURATION
SESSION_SECRET=your-session-secret-key-change-this
SESSION_EXPIRE=24h

# LOGGING CONFIGURATION
LOG_LEVEL=info
LOG_FILE=logs/app.log

# SOCIAL MEDIA LOGIN (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# NOTIFICATION SERVICES
# SMS Service (Optional - Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Optional - Firebase)
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_SENDER_ID=your-firebase-sender-id

# REDIS CONFIGURATION (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# CORS CONFIGURATION
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOW_CREDENTIALS=true

# ==============================================
# INSTRUCTIONS:
# ==============================================
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit the .env file to version control
# 4. Keep your secrets secure and rotate them regularly
# 5. Use different values for development, staging, and production
# ==============================================
